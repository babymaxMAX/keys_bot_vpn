<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>LsJ Comrades — QR</title>
  <link rel="stylesheet" href="/public/style.css" />
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
  <style>
    .qr-wrap{ max-width:480px; margin:80px auto 0; }
    #qrcode{ width: 240px; margin: 18px auto 6px; display:block; }
  </style>
</head>
<body>
  <div class="container qr-wrap">
    <div class="header">
      <div class="logo">⚔️</div>
      <div class="service-name">LsJ Comrades</div>
      <div class="service-description">QR для: <%= id %></div>
    </div>
    <div class="content">
      <canvas id="qrcode"></canvas>
    </div>
  </div>
  <script>
    const payload = `<%- payload %>`;
    try {
      QRCode.toCanvas(document.getElementById('qrcode'), payload, { width: 240 });
    } catch (e) {
      const img = new Image();
      img.src = 'https://api.qrserver.com/v1/create-qr-code/?size=240x240&data=' + encodeURIComponent(payload);
      const c = document.getElementById('qrcode'); c.replaceWith(img);
    }
  </script>
</body>
</html>


